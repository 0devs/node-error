{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib",
        "allowJs": false,
        "target": "es5",
        "lib": [ "es2015" ],
        "strict": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"]
        },
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "types": ["jest"],
        "declaration": true
    },
    "include": [
        "./src/**/*"
    ]
}
